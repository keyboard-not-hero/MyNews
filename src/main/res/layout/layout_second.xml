<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/container_content"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <ImageView
                android:layout_marginTop="40dp"
                android:id="@+id/const_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                />
            <TextView
                android:id="@+id/title_1"
                android:layout_toRightOf="@id/const_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="今日运势:"
                android:textSize="25sp"/>
            <TextView
                android:id="@+id/today"
                android:layout_below="@id/title_1"
                android:layout_alignLeft="@id/title_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                />
            <TextView
                android:id="@+id/title_2"
                android:layout_alignLeft="@id/const_image"
                android:layout_below="@id/const_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="本周运势:"
                android:textSize="25sp"/>
            <TextView
                android:id="@+id/week"
                android:layout_below="@id/title_2"
                android:layout_alignLeft="@id/title_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                />
        </RelativeLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/fresh_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加载中..."
            android:textSize="20sp"/>
    </LinearLayout>
