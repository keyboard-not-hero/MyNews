<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:background="#8fbc8f"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:text="科技最新"/>
        <Spinner
            android:id="@+id/spinner_list"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/frame_manager"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <fragment
            android:id="@+id/newsfragment"
            android:name="com.example.apiinvokedemo.FirstFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </FrameLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#636363"/>
    <RadioGroup
        android:id="@+id/group"
        android:paddingTop="5dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/first"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="?android:attr/borderlessButtonStyle"
            android:button="@null"
            android:text="新闻"
            android:textSize="12sp"
            android:background="@null"
            android:drawableTop="@drawable/chat"
            />
        <RadioButton
            android:id="@+id/second"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="?android:attr/borderlessButtonStyle"
            android:button="@null"
            android:text="星座"
            android:textSize="12sp"
            android:background="@null"
            android:drawableTop="@drawable/contact"
            />
        <RadioButton
            android:id="@+id/third"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="?android:attr/borderlessButtonStyle"
            android:button="@null"
            android:text="笑话"
            android:textSize="12sp"
            android:background="@null"
            android:drawableTop="@drawable/contacts"
            />
    </RadioGroup>
</LinearLayout>